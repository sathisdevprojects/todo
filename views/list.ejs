<%- include ('header') %>
<div class="box">
  <h1 id="heading"><%= kindOfDay %></h1>
</div>
<div class="box">
 
    <% additem.forEach((item)=>{ %>
      <form action="/delete" method="post">
    <div class="item">
      <input
        type="checkbox"
        name="checkBox"
        value="<%=item._id%>"
        onchange="this.form.submit()"
      > </input>
      <p><%= item.name %></p>
    </div>
    <input type="hidden" name="listName" value="<%= kindOfDay %>" ></input>
  </form>
    <% }); %>
 
  <form action="/" method="post" class="item">
    <input type="text" placeholder="Enter Todo..!" name="newitem" />
    <button type="submit" name="list" value="<%= kindOfDay %>">+</button>
  </form>
</div>
<%- include ("footer") %>
